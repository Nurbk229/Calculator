<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="CalculatorButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="WhiteCalculatorButton" parent="CalculatorButton">
        <item name="android:background">@drawable/bg_white_button</item>
    </style>

    <style name="BlueCalculatorButton" parent="CalculatorButton">
        <item name="android:background">@drawable/bg_blue_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="GrayCalculatorButton" parent="CalculatorButton">
        <item name="android:background">@drawable/bg_gray_button</item>
    </style>
</resources>